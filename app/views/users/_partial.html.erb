<table class="table">
  <thead>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Username</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.first_name, user %></td>
      <td><%= user.last_name %></td>
      <td><%= user.username %></td>
      <td><%= link_to 'Delete', user, method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-link" %></td>
    </tr>
  <% end %>
  </tbody>
</table>


